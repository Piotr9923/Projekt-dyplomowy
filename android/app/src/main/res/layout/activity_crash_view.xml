<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client.CrashView">

    <TextView
        android:id="@+id/crash_description_name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crash_view_description"
        android:layout_alignParentStart="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="19dp"
        android:text="Wiadomość dla klienta:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/crash_view_message"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crash_description_name3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="TextView" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fddccd"
        app:menu="@menu/bottom_navigation_menu" />

    <TextView
        android:id="@+id/crash_view_title"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottom_navigation"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Tytuł ogłoszenia" />

    <TextView
        android:id="@+id/crash_view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crash_view_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Data zgłoszenia: 01-02-2021" />

    <TextView
        android:id="@+id/crash_view_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crash_view_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Statius zgłoszenia" />

    <TextView
        android:id="@+id/crash_view_description"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crash_description_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/crash_description_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crash_view_status"
        android:layout_alignParentStart="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="19dp"
        android:text="Opis awarii:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/crash_view_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crash_view_message"
        android:layout_alignParentStart="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="19dp" />


</RelativeLayout>